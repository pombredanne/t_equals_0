{
    "name": "GrandmaBook",
    "description": "Make grandma happy",
    "version": "0.1",

    "permissions": [
        "tabs", "http://*/*"
    ],

    "content_scripts" : [{
        "matches" : [ "*://mail.google.com/*"],
        "js" : ["grandmabook.js"]
    }],

    "icons": {
        "48": "icon.png"
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Grandmabook!",
        "default_popup": "popup.html"
    },

    "manifest_version": 2
}
