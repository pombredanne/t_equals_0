<div class="file-container"></div>

{{#img}} 
<div id="placeholder" class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Picture from {{sender.name}} ({{sender.email}})</h3>
  </div>
  <div class="panel-body">
    <img src="data:{{type}};base64,{{content}}"
	 alt="image sent from {{sender.name}}">
  </div>
</div>
</div>
{{else}}
<div class="jumbotron">
  <div class="container">
    <h1>Welcome!</h1>
    <p>Nobody is currently sending you any files.</p>
  </div>
</div>
{{/img}}
